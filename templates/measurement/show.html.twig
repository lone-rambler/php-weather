{% extends 'base.html.twig' %}


{% block title %}Measurement{% endblock %}

{% block body %}
    <h1>Measurement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ measurement.datetime ? measurement.datetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ measurement.temperature }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ measurement.description }}</td>
            </tr>
            <tr>
                <th>Emoji_id</th>
                <td>{{ measurement.emojiId }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_MEASUREMENT_INDEX') %}
    <a href="{{ path('app_measurement_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('ROLE_MEASUREMENT_EDIT') %}
    <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>
    {% endif %}

    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}

